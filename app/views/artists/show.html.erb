<h2>
  <%= @artist.name %>
  <%= link_to "(edit)", edit_artist_path(@artist) %>
</h2>
<h4><%= @artist.nationality %></h4>

<img class='artist-photo' src="<%= @artist.photo_url %>">

<h2>Add a new Song for <%= @artist.name %></h2>

<%= form_for [@artist, @song] do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :album %>
  <%= f.text_field :album %>

  <%= f.label :preview_url %>
  <%= f.text_field :preview_url %>
  
  <%= f.submit %>
<% end %>
