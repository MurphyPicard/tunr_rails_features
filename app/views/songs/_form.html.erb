<%= form_for @song do |f| %>

  <% if @song.errors.any? %>
    <div id="error_explanation">
      <ul>
        <h2>errors:</h2>
        <% @song.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end  %>

  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :album %>
  <%= f.text_field :album %>

  <%= f.label :preview_url %>
  <%= f.text_field :preview_url %>

  <%= f.label :artist_id %>
  <%= f.text_field :artist_id %>

  <%= f.submit %>
<% end %>
