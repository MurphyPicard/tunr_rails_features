<!DOCTYPE html>
<html>
<head>
  <title>Tunr</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <h1>Tun.r</h1>
  <nav>
    <a href="/artists">Artists</a>
    <a href="/songs">Songs</a>
  </nav>

  <% flash.each do |type, message| %>
    <p class="flash <%= type %>">
      <%= message %>
    </p>
  <% end %>

  <%= yield %>

</body>
</html>
